<main>
<body>
    <% if flash[:notice] %>
      <p class="flash">
        <%= flash[:notice] %>
      </p>
    <% end %>
<h1 class="index_title">Books</h1>
<table>
<thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
      <% @books.each do |book| %>
  <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book) %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>
  <% end %>
  </tbody>
</table>

<h2>New Book</h2>
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
<div id="error_explanation">
  <div id="error_explanation" class="alert alert-danger">
    <div class="error_headline"><%= @book.errors.count %>errors prohibited this obj from being saved:<br></div>
    <ul class="error_text">
    <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
    </ul>
    </div>
  </div>
<% end %>
  <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title ,class:"book_title",id:"book_title" %>
  </div>
  <div class="field">
      <%= f.label :body %>
      <%= f.text_area :body %>
  </div>
  <div class="action">
  <%= f.submit %>
  </div>
<% end %>
</body>
</main>